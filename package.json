{
  "name": "@bmd-studio/genstack-container-pg-jwt-auth",
  "version": "1.0.0",
  "description": "Generic JWT authentication container using identities stored in Postgres.",
  "main": "dist/index.js",
  "types": "dist/index",
  "scripts": {
    "start": "NODE_OPTIONS=\"--inspect=0.0.0.0:$DEFAULT_DEBUG_PORT\" ts-node src/index.ts",
    "start:prod": "node dist/index.js",
    "test": "yarn test:unit",
    "test:debug": "cross-env DEBUG=pg-jwt-auth:* yarn test",
    "test:unit": "jest --runInBand",
    "build": "tsc",
    "build:watch": "yarn build --watch",
    "clean": "rimraf dist/ && rimraf coverage/ && rimraf node_modules/",
    "dc": "docker-compose --env-file=./env/defaults -f docker-compose.yml --compatibility",
    "dc:dev": "yarn dc -f docker-compose.development.yml"
  },
  "author": "Pepijn Verburg",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.11.0",
    "bcrypt": "^4.0.1",
    "chalk": "^4.1.0",
    "debug": "^4.1.1",
    "graphql": "^14.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "pg": "^7.18.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/get-port": "^4.2.0",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/pg": "^7.14.3",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^7.0.3",
    "cross-env": "^7.0.2",
    "get-port": "^5.1.1",
    "http-status-codes": "^1.4.0",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "testcontainers": "^2.8.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "uuid": "^8.0.0"
  }
}
